{
    "go.gopath": "c:/go/bin",
    "go.lintOnSave": false,
    "go.vetOnSave": false,
    "go.buildOnSave": false,
    "go.formatOnSave": false,
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "autopep8",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.exe": true,
        "**/*.obj": true,
        "**/*.class": true,
        "**/*.beam": true,
        "**/erl_crash.dump": true,
        "**/*.o": true,
        "**/*.hi": true,
        "**/*.jar": true
    },
    "files.associations": {
        "iostream": "cpp",
        "xutility": "cpp",
        "regex": "cpp",
        "xlocale": "cpp",
        "fstream": "cpp"
    }
}